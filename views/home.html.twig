{% extends 'layout.html.twig' %}

{% block content %}

    <ul class="rslides">
        <li><a href="?action=customize"><img src="assets/images/homehead1.png" alt="Personnalise ton menu"></a></li>
    </ul>

    <div class="itemnavmobile">
        <a href="#dish" class="dish">Plats</a>
        <a href="#dessert" class="dessert">Desserts</a>
        <a href="#drink" class="drink">Boissons</a>
    </div>

    <div class="categorytitle" id="dish">Plats du jour</div>

    <div class="items">
        {% for dish in dishes %}
            <div class="item dish">
                <img src="{{ dish.image }}" alt="{{ dish.name }}">
                <div class="content">
                    <h2 class="title">{{ dish.name }}</h2>
                    <p class="description">{{ dish.description }}</p>
                    <div class="actions">
                        <button class="openModal" onclick="$('#myModalDish.modal').css('display','block');">En savoir plus</button>
                        <button onclick="addtocart({{dish.id}})">Add to cart</button>
                        <!-- Trigger/Open The Modal -->
                        <!-- The Modal -->
                        <div id="myModalDish" class="modal">

                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="close" onclick="$('#myModalDish.modal').css('display','none')"> </span>
                                <h4> Ingrédients :  </h4>
                                <span> {{ dish.ingredients }}</span>
                                <h4> Allergènes :  </h4>
                                <span> {{ dish.allergenes }}</span>
                                <h4> Astuce du jour :  </h4>
                                <span> {{ dish.trick }}</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="categorytitle" id="dessert">Desserts du jour</div>

    <div class="items">
        {% for dessert in desserts %}
            <div class="item dessert">
                <img src="{{ dessert.image }}" alt="{{ dessert.name }}">
                <div class="content">
                    <h2 class="title">{{ dessert.name }}</h2>
                    <p class="description">{{ dessert.description }}</p>
                    <div class="actions">
                        <button class="openModal" onclick="$('#myModalDessert.modal').css('display','block')">En savoir plus</button>
                        <button onclick="addtocart({{dessert.id}})">Add to cart</button>
                        <div id="myModalDessert" class="modal">

                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="close" onclick="$('#myModalDessert.modal').css('display','none')"></span>
                                <h4> Ingrédients :  </h4>
                                <span> {{ dessert.ingredients }}</span>
                                <h4> Allergènes :  </h4>
                                <span> {{ dessert.allergenes }}</span>
                                <h4> Astuce du jour :  </h4>
                                <span> {{ dessert.trick }}</span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="categorytitle" id="drink">Boissons du jour</div>

    <div class="items">
        {% for drink in drinks %}
            <div class="item drink">
                <img src="{{ drink.image }}" alt="{{ drink.name }}">
                <div class="content">
                    <h2 class="title">{{ drink.name }}</h2>
                    <p class="description">{{ drink.description }}</p>
                    <div class="actions">
                        <button onclick="addtocart({{drink.id}})">Add to cart</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if extras is defined and extras is not empty %}

    <div class="categorytitle" id="extra">Extra</div>

    <div class="items">
        {% for extra in extras %}
            <div class="item extra">
                <img src="{{ extra.image }}" alt="{{ extra.name }}">
                <div class="content">
                    <h2 class="title">{{ extra.name }}</h2>
                    <p class="description">{{ extra.description }}</p>
                    <div class="actions">
                        <button class="openModal" onclick="$('#myModalExtra.modal').css('display','block');">En savoir plus</button>
                        <button onclick="addtocart({{extra.id}})">Add to cart</button>
                        <div id="myModalExtra" class="modal ">

                            <!-- Modal content -->
                            <div class="modal-content ">
                                <span class="close" onclick="$('.modal').css('display','none');"></span>
                                <h4> Ingrédients :  </h4>
                                <span> {{ extra.ingredients }}</span>
                                <h4> Allergènes :  </h4>
                                <span> {{ extra.allergenes }}</span>
                                <h4> Astuce du jour :  </h4>
                                <span> {{ extra.trick }}</span>
                            </div>

                        </div>
                    </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% endif %}

    <script src="assets/js/responsiveslides.min.js"></script>
    <script src="assets/js/home.js"></script>
{% endblock %}
