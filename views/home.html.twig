{% extends 'layout.html.twig' %}

{% block content %}

    <ul class="rslides">
        <li><a href="?action=customize"><img src="assets/images/homehead1.png" alt="Personnalise ton menu"></a></li>
    </ul>

    <div class="itemnavmobile">
        <a href="#dish" class="dish">Plats</a>
        <a href="#dessert" class="dessert">Desserts</a>
        <a href="#drink" class="drink">Boissons</a>
    </div>

    <div class="categorytitle" id="dish">Plats du jour</div>

    <div class="items">
        {% for dish in dishes %}
            <div class="item dish">
                <img src="{{ dish.image }}" alt="{{ dish.name }}">
                <div class="content">
                    <h2 class="title">{{ dish.name }}</h2>
                    <p class="description">{{ dish.description }}</p>
                    <div class="actions">
                        <a href="#">Astuce du jour</a>
                        <button onclick="addtocart({{dish.id}})">Add to cart</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="categorytitle" id="dessert">Desserts du jour</div>

    <div class="items">
        {% for dessert in desserts %}
            <div class="item dessert">
                <img src="{{ dessert.image }}" alt="{{ dessert.name }}">
                <div class="content">
                    <h2 class="title">{{ dessert.name }}</h2>
                    <p class="description">{{ dessert.description }}</p>
                    <div class="actions">
                        <a href="#">Astuce du jour</a>
                        <button onclick="addtocart({{dessert.id}})">Add to cart</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="categorytitle" id="drink">Boissons du jour</div>

    <div class="items">
        {% for drink in drinks %}
            <div class="item drink">
                <img src="{{ drink.image }}" alt="{{ drink.name }}">
                <div class="content">
                    <h2 class="title">{{ drink.name }}</h2>
                    <p class="description">{{ drink.description }}</p>
                    <div class="actions">
                        <a href="#">Astuce du jour</a>
                        <button onclick="addtocart({{drink.id}})">Add to cart</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if extras is defined and extras is not empty %}

    <div class="categorytitle" id="extra">Extra</div>

    <div class="items">
        {% for extra in extras %}
            <div class="item extra">
                <img src="{{ extra.image }}" alt="{{ extra.name }}">
                <div class="content">
                    <h2 class="title">{{ extra.name }}</h2>
                    <p class="description">{{ extra.description }}</p>
                    <div class="actions">
                        <a href="#">Astuce du jour</a>
                        <button onclick="addtocart({{extra.id}})">Add to cart</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% endif %}

    <script src="assets/js/responsiveslides.min.js"></script>
    <script src="assets/js/home.js"></script>
{% endblock %}
